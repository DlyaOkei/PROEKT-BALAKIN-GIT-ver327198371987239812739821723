<Page x:Class="Programm.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="WelcomePage">
    <Grid Background="AliceBlue">

        <Button Width="91" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Выйти" Background="White" Foreground="Black" FontSize="16" BorderThickness="0" Click="BtnBack_Click" Margin="10,10,0,0" FontWeight="Bold"/>
